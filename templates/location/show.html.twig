{% extends 'base.html.twig' %}

{% block title %}Location{% endblock %}

{% block body %}
    <div class="btn-group">
        <h1 class="text-muted">Location</h1><h1 class="text-primary">></h1><h1>Show</h1>
    </div>
    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ location.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ location.name }}</td>
            </tr>
            <tr>
                <th>Latitude</th>
                <td>{{ location.latitude }}</td>
            </tr>
            <tr>
                <th>Longitude</th>
                <td>{{ location.longitude }}</td>
            </tr>
        </tbody>
    </table>

    <div class="container text-center"><div class="btn-group">
        <a href="{{ path('app_location_index') }}"><button type="button" class="btn btn-outline-secondary m-1">Back to list</button></a>
            {% if is_granted('ROLE_LOCATION_EDIT') %}
        <a href="{{ path('app_location_edit', {'id': location.id}) }}"><button type="button" class="btn btn-outline-primary m-1">Edit</button></a>
            {% endif %}
            {% if is_granted('ROLE_LOCATION_DELETE') %}
        {{ include('location/_delete_form.html.twig') }}
            {% endif %}
        </div></div>
{% endblock %}
